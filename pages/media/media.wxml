        <view class='weui-cell__bd'>背景音频播放管理</view>
      </view>

      <view class='weui-cell' bindtap='audioControl_method'>
        <view class='weui-cell__bd'>音频组件控制</view>
      </view>
      <video src="{{src}}" muted='true'></video>
      <view class='weui-cell' bindtap='chooseVideo_method'>
        <view class='weui-cell__bd'>选取（拍摄）视频并保存视频（chooseVideo）</view>
