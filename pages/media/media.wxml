<view class='page'>
  <view class='page__hd'>
    <text>{{desc}}</text>
  </view>
  <view class='page__hd'>
    <view class='weui-cells'>
      <view class='weui-cell' bindtap='chooseImage_method'>
        <view class='weui-cell__bd'>图片（chooseImage）</view>
      </view>
      <view class='weui-cell' bindtap='previewImage_method'>
        <view class='weui-cell__bd'>图片（previewImage）</view>
      </view>
      <view class='weui-cell' bindtap='getImageInfo_method'>
        <view class='weui-cell__bd'>图片（getImageInfo）</view>
      </view>
      <view class='weui-cell' bindtap='saveImageToPhotosAlbum_method'>
        <view class='weui-cell__bd'>图片（saveImageToPhotosAlbum）</view>
      </view>
      <view class='weui-cell' bindtap='startRecord_method'>
        <view class='weui-cell__bd'>录音</view>
      </view>
      <view class='weui-cell' bindtap='startRecord_method'>
        <view class='weui-cell__bd'>录音管理（todo）</view>
      </view>
