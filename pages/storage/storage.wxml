<!--pages/storage/storage.wxml-->

<view class='page'>
  <view class='page__hd'>
    <text>{{desc}}</text>
  </view>
  <view class='page__hd'>
    <view class='weui-cells'>
      <view class='weui-cell' bindtap='setStorage'>
        <view class='weui-cell__bd'>设置缓存</view>
      </view>
      <view class='weui-cell' bindtap='getStorage'>
        <view class='weui-cell__bd'>获取缓存</view>
      </view>
      <view class='weui-cell' bindtap='removeStorage'>
        <view class='weui-cell__bd'>移除某个字段</view>
      </view>
      <view class='weui-cell' bindtap='clearStorage'>
        <view class='weui-cell__bd'>清除缓存</view>
      </view>
      <view class='weui-cell' bindtap='getStorageInfo'>
        <view class='weui-cell__bd'>获取缓存信息</view>
      </view>

    </view>
  </view>
</view>